apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
   name: role-oauthclients-admin
rules:
    - apiGroups: [ "oauth.openshift.io" ]
      resources:
         - "oauthclients"
      verbs: ["get", "list", "create"]
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
   name: bind-role-oauthclients-admin
roleRef:
   kind: ClusterRole
   name: role-oauthclients-admin
   apiGroup: rbac.authorization.k8s.io
subjects:
- kind: User
  name: user*
  apiGroup: rbac.authorization.k8s.io